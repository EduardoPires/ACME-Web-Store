@model IEnumerable<Acme.Store.UI.Mvc.Models.ProdutoExibirViewModel>

@{
    ViewData["Title"] = "Página Inicial";
}

<header class="bg-primary py-3 mb-4">
    <div class="container h-75">
        <div class="row align-items-center">
            <div class="col-lg-3">
                <img src="img/acme_logo.png" />
            </div>
            <div class="col-lg-9">
                <h1 class="display-5 text-white mt-5 mb-2 fw-bold">ACME Web Store</h1>
                <p class="lead mb-5 text-white">Produtos de alta eficiência para clientes extremamente inteligentes.</p>
            </div>
        </div>
    </div>
</header>

<div class="container main-container">
    <div class="row text-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src=@Html.DisplayFor(modelItem => item.Imagem) height="164" width="253" alt="Produtos">
                    
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h4>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                    </div>

                    <div class="card-footer">
                        <a href="#" class="btn btn-primary">Comprar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
