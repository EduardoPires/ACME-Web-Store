@using Acme.Store.Business.Models
@model Acme.Store.UI.Mvc.Models.ProdutoExibirViewModel

@{
    ViewData["Title"] = "Detalhes do Produto";
}

@section Links {

}

<div class="container main-container">
    <h1>Detalhes do Produto</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group p-1">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly/>
            </div>

            <div class="form-group p-1">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="3" readonly></textarea>
            </div>

            <div class="form-group p-1">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" readonly/>
            </div>

            <div class="form-group p-1">
                <label asp-for="Vendedor" class="control-label"></label>
                <input asp-for="Vendedor" class="form-control" readonly />
            </div>

            <div class="form-group p-1">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" type="text" class="form-control" readonly />
            </div>

            <div class="form-group p-1">
                <label asp-for="QuantidadeEstoque" class="control-label"></label>
                <input asp-for="QuantidadeEstoque" type="text" class="form-control" readonly />
            </div>

            <div class="form-group p-1">
                <label asp-for="UnidadeVenda" class="control-label"></label>
                <input asp-for="UnidadeVenda" class="form-control" readonly/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group p-1">
                <img src=@Model.Imagem class="img-fluid p-1">
            </div>
        </div>

    </div>
    <div class="form-group p-1">
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>

</div>

