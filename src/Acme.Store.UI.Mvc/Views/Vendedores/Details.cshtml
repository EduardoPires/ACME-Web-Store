@using Acme.Store.Business.Models
@model Acme.Store.UI.Mvc.Models.VendedorViewModel

@{
    ViewData["Title"] = "Detalhes do Vendedor";
}

<div class="container main-container">
    @*<h1>@("Detalhes do Vendedor: "  + Model?.Nome ?? "")</h1>*@
    <h1>Detalhes do Vendedor</h1>
    <hr />

    <div class="form-row">
        <input type="hidden" asp-for="Id" />

        <div class="form-group col-md-6 p-1">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" readonly />
        </div>

        <div class="form-group col-md-6 p-1">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="form-group p-1">
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>

</div>

