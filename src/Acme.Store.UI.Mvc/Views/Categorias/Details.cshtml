@using Acme.Store.Business.Models
@model Acme.Store.UI.Mvc.Models.CategoriaViewModel

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="container main-container">
    @*<h1>@("Detalhes da Categoria: "  + Model?.Nome ?? "")</h1>*@
    <h1>Detalhes da Categoria</h1>
    <hr />

    <div class="form-row">
        <input type="hidden" asp-for="Id" />

        <div class="form-group col-md-6 p-1">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" readonly />
        </div>

        <div class="form-group col-md-6 p-1">
            <label asp-for="Descricao" class="control-label"></label>
            <textarea asp-for="Descricao" class="form-control" rows="3" readonly></textarea>
        </div>

        <div class="form-group p-1">
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>

</div>

